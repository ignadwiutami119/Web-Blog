@page
@model IndexModel
@{
    ViewData["Title"] = "_LayoutIndex";
}

@{
    ViewBag.items = ViewData["Data"];
    var a = ViewBag.items;
    foreach(var item in a){

                 <div class="col-md-10 blogShort">
                     <br>
                     <h2 style="color:black">@item.title</h2>
                     <img src=@item.image alt="post img" class="pull-left img-responsive thumb margin10 img-thumbnail">
                     <article><p>
                         @item.highlight    
                         </p></article>
                     <button class="btn btn-blog pull-right marginBottom10" onclick="window.location.href='/Read?id=@item.id'">READ MORE</button> 
                 </div> }
}