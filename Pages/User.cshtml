@page
@model UserModel
@{
    Layout = "_LayoutUser";
}

@{
    ViewBag.items = ViewData["Data"];
    //LANJUT DISINI OK//
    //mau detect apakah user login kalo ga login komen ga tampil
    ViewBag.user = ViewData["Data-user"];
    var a = ViewBag.items;
    var is_login = ViewBag.user;
    foreach(var item in a){
                 <div class="col-md-10 blogShort">
                     <br>
                     <h2 style="color:black">@item.title</h2>
                     <img src=@item.image alt="post img" class="pull-left img-responsive thumb margin10 img-thumbnail">
                     <article><p>
                         @item.highlight    
                         </p></article>
                     <button class="btn btn-blog pull-right marginBottom10" onclick="window.location.href='/Read?id=@item.id&login=@is_login'">READ MORE</button> 
                 </div> }
}